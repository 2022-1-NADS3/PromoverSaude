<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppPSOne.AdicionarEvento">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Entry Placeholder="Título do Exame" Text="" x:Name="title"  Margin="10"/>
                <DatePicker x:Name="dataFormat" Format="d" Margin="10"></DatePicker>
                <TimePicker Margin="10" x:Name="hora"> </TimePicker>
                <Entry Placeholder="Detalhes" Text="" x:Name="description" Margin="10"/>
                <Button Text="Cadastrar Exame" Clicked="Cadastro_Exame" VerticalOptions="StartAndExpand" Margin="10" BorderRadius="10" BackgroundColor="DeepSkyBlue" TextColor="White"/>
                <Button Text="Voltar" x:Name="Next" Clicked="Voltar_" 
                        VerticalOptions="StartAndExpand" 
                        BorderColor="Black" BorderWidth="2" 
                        HorizontalOptions="Center" 
                        BorderRadius="10" 
                        BackgroundColor="White"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>